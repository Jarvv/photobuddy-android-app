<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/general_margin"
    android:id="@+id/recent_item">

    <ImageView
        android:id="@+id/recent_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/general_margin"
        app:srcCompat="@drawable/ic_access_time"
        android:layout_weight="0.05"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_search_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:text="@string/recent_searches_title"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/recent_search_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:text="@string/recent_searches_title"
            android:textSize="12sp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/recent_search_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_close"
        android:layout_weight="0.05" />

</LinearLayout>